@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">
<style>
    .col-md-6.mb-4 {
        border: 1px solid black;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        height: 500px;
        width:500px;
    }
    .row {
        gap: 5px;
    }
    .container{
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<!-- Display Classes and Subjects -->
<div class="container">
    <div class="row">
        <!-- Display Classes -->
        <div class="col-md-6 mb-4">
            <h3>Classes</h3>
            <div class="d-flex flex-column gap-4">
                @foreach (var classItem in ViewBag.Classes)
                {
                    <div class="cookieCard">
                        <p class="cookieHeading">@classItem.ClassName</p>
                        <p class="cookieDescription">View and manage students and assignments for this class.</p>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Index", "Students", new { classId = classItem.ClassId })" class="acceptButton">Show Students</a>
                            <a href="@Url.Action("Index", "Assignments", new { classId = classItem.ClassId })" class="acceptButton">Assignments</a>

                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Display Static Card for Subjects -->
        <div class="col-md-6 mb-4">
            <h3>Subjects</h3>
            <div class="cookieCard">
                <p class="cookieHeading">Subjects</p>
                <p class="cookieDescription">View and manage subjects across different classes.</p>
                <a href="@Url.Action("Index", "Subjects")" class="acceptButton">Show Subjects</a>
            </div>
        </div>
    </div>
</div>
